<% @events.each do |event| %>
  <div class="col-10 col-md-6 col-lg-3 mb-4 d-flex">
    <div class="card flex-fill">
      <%= link_to users_event_path(event), class: "card-link d-flex flex-column h-100" do %>
        <div class="card-img-top">
          <%= image_tag event.image, class: "img-fluid", alt: event.name, style: "height: 150px; object-fit: cover;" %>
        </div>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title" style="min-height: 3rem;"><strong><%= truncate(event.name, length: 50) %></strong></h5>
          <p class="card-text" style="flex-grow: 1; min-height: 4rem; overflow: hidden; text-overflow: ellipsis;"><%= truncate(event.description, length: 100) %></p>
          <p class="card-text">
            <small class="text-muted">
              <i class="fa fa-calendar"></i>
              <%= l(event.start_datetime, format: :short) %> - <%= l(event.end_datetime, format: :short) %>
            </small>
          </p>
        </div>
        <div class="card-footer mt-auto">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <small class="text-muted">Desde</small>
              <strong>USD Free</strong>
            </div>
            <div class="btn btn-primary">Detalles</div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
