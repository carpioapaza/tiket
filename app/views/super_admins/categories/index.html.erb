<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="fw-bold">Categorías</h1>
    <%= link_to 'Nuevo', new_super_admins_category_path, class: 'btn btn-primary' %>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>Nombre</th>
          <th>Descripción</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.description %></td>
            <td>
              <%= link_to super_admins_category_path(category), class: "btn btn-info btn-sm", title: "Ver" do %>
                <i class="bi bi-eye"></i>
              <% end %>
            </td>
            <td>
              <%= link_to edit_super_admins_category_path(category), class: "btn btn-warning btn-sm", title: "Editar" do %>
                <i class="bi bi-pencil"></i>
              <% end %>
            </td>
            <td>
              <%= link_to super_admins_category_path(category), method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-danger btn-sm", title: "Eliminar" do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
