<div class="container">
  <h1 class="mt-4">Admin Details</h1>

  <div class="card">
    <div class="card-body">
      <p class="card-text">
        <strong>First Name:</strong>
        <%= @admin.first_name %>
      </p>

      <p class="card-text">
        <strong>Last Name:</strong>
        <%= @admin.last_name %>
      </p>

      <p class="card-text">
        <strong>Email:</strong>
        <%= @admin.email %>
      </p>

      <p class="card-text">
        <strong>Role:</strong>
        <%= @admin.role.titleize %>
      </p>
      
      <%= link_to 'Edit', edit_super_admins_admin_path(@admin), class: "btn btn-warning" %>
      <%= link_to 'Back', super_admins_admins_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
