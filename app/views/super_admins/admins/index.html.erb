<h1>Admin Management</h1>

<%= link_to 'New Admin', new_super_admins_admin_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.first_name %></td>
        <td><%= admin.last_name %></td>
        <td><%= admin.email %></td>
        <td><%= admin.role.titleize %></td>
        <td><%= link_to 'Show', super_admins_admin_path(admin) %></td>
        <td><%= link_to 'Edit', edit_super_admins_admin_path(admin) %></td>
        <td><%= link_to 'Delete', super_admins_admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
