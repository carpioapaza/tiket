<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="fw-bold">Gesti√≥n de administradores</h1>
    <%= link_to 'Nuevo', new_super_admins_admin_path, class: "btn btn-primary" %>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>Nombre</th>
          <th>Cant. Eventos</th>
          <th>Email</th>
          <th>Rol</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.first_name %></td>
            <td>
              <% Event.admin_statuses.keys.each do |status| %>
                <span class="<%= event_status_class(status) %>">
                  <%= event_status_count(admin, status) %> 
                </span>
              <% end %>=
              <span class="badge bg-primary"><%= admin.events.count %></span>
            </td>
            <td><%= admin.email %></td>
            <td><%= admin.role.titleize %></td>
            <td>
              <%= link_to super_admins_admin_path(admin), class: "btn btn-info btn-sm", title: "Ver" do %>
                <i class="bi bi-eye"></i>
              <% end %>
            </td>
            <td>
              <%= link_to edit_super_admins_admin_path(admin), class: "btn btn-warning btn-sm", title: "Editar" do %>
                <i class="bi bi-pencil"></i>
              <% end %>
            </td>
            <td>
              <%= link_to super_admins_admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm", title: "Eliminar" do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
