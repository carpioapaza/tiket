<div class="container">
  <h1 class="mt-4">Admin Management</h1>

  <%= link_to 'New Admin', new_super_admins_admin_path, class: "btn btn-primary mb-3" %>

  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>First Name</th>
        <th>Events</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.first_name %></td>
          <td><%= admin.events.count %></td>
          <td><%= admin.email %></td>
          <td><%= admin.role.titleize %></td>
          <td><%= link_to 'Show', super_admins_admin_path(admin), class: "btn btn-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_super_admins_admin_path(admin), class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to 'Delete', super_admins_admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
