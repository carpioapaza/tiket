<% provide(:title, "Cities") %>

<h1>Cities</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @cities.each do |city| %>
        <tr>
          <td><%= city.name %></td>
          <td><%= link_to 'Show', super_admins_city_path(city), class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Edit', edit_super_admins_city_path(city), class: 'btn btn-primary btn-sm' %></td>
          <td>
            <%= link_to 'Destroy', super_admins_city_path(city), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New City', new_super_admins_city_path, class: 'btn btn-success' %>
