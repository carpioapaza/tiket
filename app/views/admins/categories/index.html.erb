<h1>Categorías</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Ver', admins_category_path(category) %></td>
        <td><%= link_to 'Editar', edit_admins_category_path(category) %></td>
        <td><%= link_to 'Eliminar', admins_category_path(category), method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Categoria', new_admins_category_path, class: 'btn btn-primary' %>
