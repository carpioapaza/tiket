<div class="container">
  <h1 class="mt-4">Event Details</h1>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @event.name %></h5>
      <p class="card-text"><strong>Status:</strong> <%= @event.admin_status %></p>
      <p class="card-text"><strong>Description:</strong> <%= @event.description %></p>
      <%= link_to 'Edit', edit_admins_event_path(@event), class: "btn btn-warning" %>
      <%= link_to 'Back', admins_events_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
