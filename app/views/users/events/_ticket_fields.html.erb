<div class="nested-fields">
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :ticket_name %>
      <%= f.text_field :ticket_name, class: 'form-control', required: true %>
    </div>
    <div class="form-group col-md-3">
      <%= f.label :quantity_available %>
      <%= f.number_field :quantity_available, class: 'form-control', required: true %>
    </div>
    <div class="form-group col-md-3">
      <%= f.label :price %>
      <%= f.number_field :price, class: 'form-control', required: true %>
    </div>
    <div class="form-group col-md-3">
      <%= f.label :currency %>
      <%= f.text_field :currency, class: 'form-control', required: true %>
    </div>
  </div>
  <%= link_to_remove_association 'Remove Ticket', f, class: 'btn btn-danger' %>
</div>
