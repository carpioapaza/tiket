<%= form_with(model: [:users, @event], local: true) do |form| %>

  <% if @event.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :start_datetime %>
    <%= form.datetime_select :start_datetime, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :end_datetime %>
    <%= form.datetime_select :end_datetime, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :visibility %>
    <%= form.select :visibility, Event.visibilities.keys.map { |w| [w.humanize, w] }, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :restriction %>
    <%= form.select :restriction, Event.restrictions.keys.map { |w| [w.humanize, w] }, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :capacity %>
    <%= form.number_field :capacity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :video_url %>
    <%= form.text_field :video_url, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
