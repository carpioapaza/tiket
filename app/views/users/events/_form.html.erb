<%= form_with(model: [:users, @event], local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container d-flex flex-wrap justify-content-between gap-3">
    <div class="flex-grow-1 mr-3">
      <fieldset>
        <legend>Event Information</legend>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control', required: true %>
        </div>

        <div class="d-flex gap-3">
          <div class="w-50">
            <div class="form-group">
              <%= form.label :start_datetime %>
              <%= form.datetime_select :start_datetime, { default: Time.current }, { class: 'form-control w-100' } %>
            </div>
          </div>
          <div class="w-50">
            <div class="form-group">
              <%= form.label :end_datetime %>
              <%= form.datetime_select :end_datetime, { default: Time.current }, { class: 'form-control w-100' } %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :visibility %>
          <%= form.select :visibility, Event.visibilities.keys.map { |w| [w.humanize, w] }, { prompt: 'Select visibility' }, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= form.label :restriction %>
          <%= form.select :restriction, Event.restrictions.keys.map { |w| [w.humanize, w] }, { prompt: 'Select restriction' }, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= form.label :capacity %>
          <%= form.number_field :capacity, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= form.label :video_url %>
          <%= form.text_field :video_url, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :image %>
          <%= form.file_field :image, class: 'form-control' %>
          <% if @event.image.attached? %>
            <p>Current Image:</p>
            <%= image_tag @event.image %>
          <% end %>
        </div>
      </fieldset>
    </div>

    <div class="flex-grow-1 mr-3">
      <fieldset>
        <legend>Location Information</legend>
          <div class="form-group">
            <%= form.label :city_id %>
            <%= form.select :city_id, City.pluck(:name, :id), { prompt: 'Select a city' }, { class: 'form-control', required: true } %>
          </div>
        <%= form.fields_for :location do |location_fields| %>
          <div class="form-group">
            <%= location_fields.label :address %>
            <%= location_fields.text_field :address, class: 'form-control', required: true %>
          </div>

          <div class="form-group">
            <%= location_fields.label :reference %>
            <%= location_fields.text_field :reference, class: 'form-control' %>
          </div>
        <% end %>
      </fieldset>
    </div>

    <div class="flex-grow-1">
      <fieldset>
        <legend>Category</legend>
        <div class="form-group">
          <%= form.label :category_id %>
          <%= form.select :category_id, Category.pluck(:name, :id), { prompt: 'Select a category' }, { class: 'form-control', required: true } %>
        </div>
      </fieldset>
    </div>

    <div data-controller="tickets">
      <fieldset>
        <legend>Tickets</legend>
        <div data-tickets-target="tickets">
          <%= form.fields_for :tickets do |ticket_fields| %>
            <%= render 'ticket_fields', f: ticket_fields %>
          <% end %>
        </div>
        <div>
          <button type="button" data-action="click->tickets#addTicket" class="btn btn-secondary mt-2">Add Ticket</button>
        </div>
      </fieldset>
    </div>

    <!-- Hidden blueprint template -->
    <div id="ticket_template" style="display: none;">
      <%= form.fields_for :tickets, @event.tickets.build, child_index: 'NEW_RECORD' do |ticket_fields| %>
        <%= render 'ticket_fields', f: ticket_fields %>
      <% end %>
    </div>
  </div>

  <div class="actions d-flex justify-content-center mt-3">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
